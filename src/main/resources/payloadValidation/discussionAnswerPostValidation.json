{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "type": {
      "type": "string",
      "enum": ["answerPost"]
    },
    "parentDiscussionId": {
      "type": "string"
    },
    "communityId": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "taggedUser": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "mentionedUsers": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "userId": { "type": "string" },
          "userName": { "type": "string" }
        },
        "required": ["userId", "userName"]
      }
    }
  },
  "required": [
    "type",
    "description",
    "parentDiscussionId",
    "communityId"
  ],
  "additionalProperties": false
}