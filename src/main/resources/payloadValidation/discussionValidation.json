{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "type": {
      "type": "string",
      "enum": ["question"]
    },
    "description": {
      "type": "string"
    },
    "communityId": {
      "type": "string"
    },
    "mentionedUsers": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "userId": { "type": "string" },
          "userName": { "type": "string" }
        },
        "required": ["userId", "userName"]
      }
    }
  },
  "required": [
    "type",
    "communityId"
  ],
    "additionalProperties": false
}